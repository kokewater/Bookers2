<% if @user.errors.any? %>
  <div class="error_message">
    <h3>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>
  <div class="field">
    <label>Name</label>
  <%= f.text_field :name, autofocus: true, placeholder:"名前", class: "name", id:"inputName" %><br>
  </div>
  <div class="field">
    <label>Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="field">
    <label>Introduction</label>
    <%= f.text_area :introduction, class:"introduction" %> <br>
  </div>
  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>