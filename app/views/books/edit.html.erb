<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
    <%= form_with model: @book, local:true do |f| %>
      <div class="row field">
        <label>Title</label>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>
      <div class="row field">
        <label>Opinion</label>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>
      <div class="row">
        <%= f.submit "Create Book", class: "btn btn-primary btn-block col-xs-12" %>
      </div>
    <% end %>
    <%= link_to "Show", book_path %>
    |
    <%= link_to "Back", books_path %>
  </div>
</div>
