    <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    <table class="table">
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    <div class="row">
      <%= link_to edit_user_path(current_user.id), class:"btn btn-default btn-block col-xs-12" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
    </div>
    
    <h2>New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <div class="row field">
        <label>Title</label>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>
      <div class="row field">
        <label>Opinion</label>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>
      <div class="row">
        <%= f.submit "Create Book", class: "btn btn-primary btn-block col-xs-12" %>
      </div>
    <% end %>